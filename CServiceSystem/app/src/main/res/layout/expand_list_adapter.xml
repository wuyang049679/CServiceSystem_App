<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/item_down_bg"
    android:layout_width="match_parent"
    android:layout_height="48dp">


    <View
        android:layout_alignParentBottom="true"
        android:background="@color/black_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ImageView
        android:id="@+id/ep_iv"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/expand"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <TextView
        android:id="@+id/ep_tv"
        android:layout_marginLeft="2dp"
        android:text="未分组"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ep_iv"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ep_count"
        android:layout_marginRight="@dimen/window_margin"
        android:text="12"
        android:textSize="13sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black_aa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>