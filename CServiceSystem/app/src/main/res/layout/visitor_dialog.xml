<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingLeft="15dp"
        android:paddingBottom="6dp"
        android:gravity="bottom"
        android:textSize="14sp"
        android:textColor="@color/black_aa"
        android:text="轨迹"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <View
        android:background="@color/black_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/recycler_lin"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <androidx.recyclerview.widget.RecyclerView
            android:overScrollMode="never"
            android:id="@+id/visitor_recycler_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@color/black_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <View
        android:layout_marginTop="20dp"
        android:background="@color/black_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:background="@color/white"
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="来源"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:enabled="true"
                android:clickable="true"
                android:textIsSelectable="true"
                android:singleLine="true"
                android:id="@+id/visitor_url"
                android:layout_gravity="right"
                android:text="直接访问"
                android:textSize="14sp"
                android:textColor="@color/black_aa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView

                android:visibility="gone"
                android:id="@+id/visitor_tag"
                android:padding="3dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/green_b"
                android:layout_gravity="right"
                android:text="回头客"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginLeft="20dp"
        android:background="@color/black_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
        <RelativeLayout
            android:background="@color/white"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="IP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <TextView
                    android:enabled="true"
                    android:clickable="true"
                    android:textIsSelectable="true"
                    android:id="@+id/visitor_ip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:text="100.1.1.127"
                    android:textSize="14sp"
                    android:textColor="@color/black_aa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>
    <View

        android:background="@color/black_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:layout_marginTop="20dp"
          android:visibility="gone"
          android:id="@+id/visitor_yqdh"
          android:gravity="center"
          android:textColor="@color/black"
          android:textSize="17sp"
          android:text="邀请对话"
          android:background="@drawable/item_down_bg"
          android:layout_width="match_parent"
          android:layout_height="48dp"/>
        <View
            android:background="@color/black_line"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/visitor_zddh"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="主动对话"
            android:background="@drawable/item_down_bg"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
        <View
            android:layout_marginBottom="20dp"
            android:background="@color/black_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>

</LinearLayout>