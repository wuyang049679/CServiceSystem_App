<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/text_item_lin"
        android:background="@drawable/item_down_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:singleLine="true"
            android:id="@+id/update_tv"
            android:text="选项1"
            android:layout_marginLeft="@dimen/window_margin"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
           android:id="@+id/item_checked"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/correct"
            android:layout_width="40dp"
            android:layout_height="20dp"/>
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/black_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
</LinearLayout>