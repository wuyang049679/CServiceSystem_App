<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/img_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView


        fresco:failureImage="@mipmap/photos"
        fresco:retryImageScaleType="centerCrop"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:actualImageScaleType="centerCrop"
        android:id="@+id/chat_img"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundedCornerRadius="3dp"
        fresco:roundingBorderWidth="0.5dp"
        fresco:progressBarImage="@drawable/progressbar_loading"
        fresco:roundingBorderColor="@color/black_line"
        fresco:roundWithOverlayColor="@color/background"
        android:layout_width="0dp"
        android:layout_height="0dp" />


    <ImageView
        android:visibility="gone"
        android:id="@+id/chat_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>