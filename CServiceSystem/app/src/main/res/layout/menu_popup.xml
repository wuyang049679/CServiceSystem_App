<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:layout_goneMarginLeft="@dimen/window_margin"
    app:layout_goneMarginRight="@dimen/window_margin"
    app:layout_goneMarginTop="@dimen/window_margin"
    android:layout_marginBottom="@dimen/window_margin"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"

        android:background="@drawable/white_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/window_margin"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/item_down_bg"
            android:id="@+id/msg_copy"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="复制"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center"
        android:visibility="gone"
        android:padding="@dimen/window_margin"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/item_down_bg"
        android:id="@+id/msg_cancel"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="撤回"
        android:layout_width="60dp"
        android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>