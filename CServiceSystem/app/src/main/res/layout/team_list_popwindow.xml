<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/team_lin"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/team_list_header"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        fresco:backgroundImage="@drawable/green_btn"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundAsCircle="true"
        fresco:overlayImage="@mipmap/header"
        />
    <TextView
        android:id="@+id/team_name"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="我的小伙伴"
        android:layout_marginLeft="10dp"
        fresco:layout_constraintLeft_toRightOf="@+id/team_list_header"
        android:layout_marginTop="10dp"
        fresco:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/team_content"
        android:textSize="12sp"
        android:text="对话数：2"
        android:layout_marginLeft="10dp"
        fresco:layout_constraintLeft_toRightOf="@+id/team_list_header"
        android:layout_marginBottom="10dp"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/black_line"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>