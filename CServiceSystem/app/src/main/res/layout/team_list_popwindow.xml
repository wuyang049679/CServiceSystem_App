<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:id="@+id/team_lin"
    android:background="@drawable/item_down_bg"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">


    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginLeft="10dp"
        android:id="@+id/team_list_header"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="45dp"
        android:layout_height="45dp"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundAsCircle="true"
        />
    <ImageView
        android:id="@+id/state_msg"
        android:layout_marginBottom="2dp"
        fresco:layout_constraintBottom_toBottomOf="@id/team_list_header"
        fresco:layout_constraintRight_toRightOf="@id/team_list_header"
        android:src="@drawable/oval_grag"
        android:layout_width="8dp"
        android:layout_height="8dp" />
    <LinearLayout
        android:gravity="center_vertical"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintLeft_toRightOf="@+id/team_list_header"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/team_name"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="我的小伙伴"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/team_content"
            android:textColor="@color/black_999"
            android:textSize="13sp"
            android:text="对话数 2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/black_line"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>