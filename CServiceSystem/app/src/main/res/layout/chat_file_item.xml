<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/white_file_down"
    android:clickable="true"
    android:id="@+id/file_lin"
    android:layout_width="match_parent"
    android:padding="@dimen/window_margin"
    android:layout_height="90dp">

    <LinearLayout
        android:layout_marginRight="@dimen/window_margin"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/filetype"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/filename"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="test.doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/filesize"
            android:textSize="13sp"
            android:text="22kb"
            android:textColor="@color/black_777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/filetype"
        android:background="@color/bg_def"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="60dp">

        <TextView
            android:maxLength="3"
            android:id="@+id/fileTypes"
            android:textColor="@color/white"
            android:text="r"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>