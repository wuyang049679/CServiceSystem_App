<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.activity.realauth.RemStateActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/act_real_authen"
        android:background="@color/theme_app"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:padding="9dp"
            android:id="@+id/backImg"
            android:src="@mipmap/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="42dp"
            android:layout_height="50dp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/msg_count_tv"
            app:layout_constraintCircle="@+id/backImg"
            app:layout_constraintCircleAngle="45"
            app:layout_constraintCircleRadius="16dp"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:minWidth="18dp"
            android:background="@drawable/oval_red"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/title_real_authen"
            android:maxEms="10"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="企业对公打款认证"
            android:textColor="@color/white"
            android:layout_marginLeft="6dp"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/backImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout

        android:id="@+id/dhz_lin"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/wait"
        android:layout_width="90dp"
        android:layout_height="90dp"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
        android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@color/black_333"
        android:text="请等待合从给您汇款验证"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="@color/black_333"
            android:text="汇款过程需要 1 - 3 个工作日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/black_333"
            android:text="请注意查收汇款短信通知"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:id="@+id/click_ok"
            android:gravity="center"
            android:paddingBottom="@dimen/window_margin"
            android:paddingTop="@dimen/window_margin"
            android:paddingRight="@dimen/window_margin_h"
            android:paddingLeft="@dimen/window_margin_h"
            android:background="@drawable/login_btn"
            android:textColor="@color/white"
            android:text="确定"
            android:textSize="17sp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/qr_lin"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/phone"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="汇款金额"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <com.hc_android.hc_css.wight.AddAndSubEditText
            android:focusable="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/window_margin"
            android:layout_toRightOf="@+id/phone"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:id="@+id/phone_et"
            android:textSize="16sp"
            android:hint="请输入收到汇款的金额"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/yuan"
            android:text="元"
            android:textColor="@color/black"
            android:textSize="16sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View

            android:layout_alignParentBottom="true"
            android:background="@color/black_d5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/next_b"
        android:gravity="center"
        android:paddingBottom="@dimen/window_margin"
        android:paddingTop="@dimen/window_margin"
        android:paddingRight="@dimen/window_margin_h"
        android:paddingLeft="@dimen/window_margin_h"
        android:background="@drawable/login_btn"
        android:textColor="@color/white"
        android:text="确定"
        android:textSize="17sp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>